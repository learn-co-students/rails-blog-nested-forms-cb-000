<%= form_for(@post) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@post.errors.count, "error") %>
    prohibited this post from being saved:</h2>

  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>
  Tags:

</div>

<div class="field">
  <%= f.collection_select :tag_ids, Tag.all, :id, :name, include_blank: "New Tag" %>
  <%= f.fields_for :tags, Tag.new do |tag| %>
  <%= tag.label :name %>
  <%= tag.text_field :name %>
  <%end%>

  <!--
  <label for="post_tags_attributes_0_name">New Tag
    <input type="text" id="post_tags_attributes_0_name" name="post[tags_attributes][0][name]"/>
  </label>-->
</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>